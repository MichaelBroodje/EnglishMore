<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="346dp"
        android:layout_height="392dp"
        android:layout_centerInParent="true"

        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">


        <Button
            android:id="@+id/btn_not_know"
            android:layout_width="359dp"
            android:layout_height="66dp"
            android:layout_gravity="bottom|center"
            android:text="I don't know this word." />

        <Button
            android:id="@+id/btn_know"
            android:layout_width="359dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:layout_marginTop="105dp"
            android:layout_marginBottom="1dp"
            android:text="I know this word." />

        <TextView
            android:id="@+id/card_back_worditself"
            android:layout_width="157dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:gravity="center|right"
            android:text="TextView"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/audioButton"
            android:layout_width="31dp"
            android:layout_height="40dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/voice"
            android:visibility="visible"
            tools:srcCompat="@drawable/voice" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:id="@+id/card_back_explain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="fill"
                android:text="TextView" />
        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>
